      <mapping class="com.bewire.DAL.Transaction"/>
      <mapping class="com.bewire.DAL.Transactiontype"/>
      <mapping class="com.bewire.DAL.User"/>
    <mapping class="com.bewire.Models.Asset"/>
    <mapping class="com.bewire.Models.Currency"/>
    <mapping class="com.bewire.Models.Currencymarketprice"/>
    <mapping class="com.bewire.Models.Market"/>
    <mapping class="com.bewire.Models.Pricealarm"/>
    <mapping class="com.bewire.Models.Trade"/>
    <mapping class="com.bewire.Models.Transaction"/>
